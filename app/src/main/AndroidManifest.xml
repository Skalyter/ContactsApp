<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiberiugaspar.tpjadcontactsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_contacts_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_contacts_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TPJADContactsApp">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.RegisterActivity"
            android:theme="@style/Theme.TPJADContactsApp.NoActionBar" />
        <activity
            android:name=".auth.LoginActivity"
            android:theme="@style/Theme.TPJADContactsApp.NoActionBar" />
        <activity
            android:name=".ContactDetailsActivity"
            android:label="@string/title_activity_add_edit_contact"
            android:theme="@style/Theme.TPJADContactsApp.NoActionBar" />
        <activity
            android:name=".AddEditContactActivity"
            android:label="@string/title_activity_add_edit_contact"
            android:theme="@style/Theme.TPJADContactsApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TPJADContactsApp.NoActionBar" />
    </application>

</manifest>